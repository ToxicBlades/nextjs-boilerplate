{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"ignore": [".next/", "node_modules/", "prisma/", "messages/"],
		"attributePosition": "auto",
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 80,
		"lineEnding": "lf"
	},
	"organizeImports": {
		"enabled": true,
		"ignore": [".next/", "node_modules/", "prisma/", "messages/"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"nursery": {
				"useSortedClasses": {
					"level": "warn",
					"fix": "safe",
					"options": {
						"attributes": ["classList"],
						"functions": ["clsx", "cva", "cn"]
					}
				}
			},
			"a11y": {
				"noSvgWithoutTitle": "off",
				"useKeyWithClickEvents": "off",
				"useSemanticElements": "off",
				"useFocusableInteractive": "off"
			},
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off",
				"noConfusingVoidType": "off",
				"noArrayIndexKey": "warn"
			},
			"style": {
				"noUselessElse": "off",
				"noNonNullAssertion": "off"
			},
			"complexity": {
				"noForEach": "off",
				"noBannedTypes": "off"
			}
		},
		"ignore": [".next/", "node_modules/", "prisma/", "messages/"]
	}
}
